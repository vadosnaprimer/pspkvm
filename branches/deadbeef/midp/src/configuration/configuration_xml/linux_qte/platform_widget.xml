<configuration>
<constants>
<constant_class Package="com.sun.midp.configurator" Name="Constants" Scope="public">
<!-- Package javax.microedition.lcdui -->
  <constant Type="int"
	    Name="ALERT_NUM_OF_BUTTONS"
	    Value="3"
	    Comment="Number of buttons for abstract commands."/>
  <constant Type="int"
	    Name="ALERT_BUTTON_WIDTH"
	    Value="40"
	    Comment="Width of an abstract command."/>
  <constant Type="int"
	    Name="ALERT_BUTTON_HEIGHT"
	    Value="20"
	    Comment="Height of an abstract command."/>
  <constant Type="int"
	    Name="ALERT_CELL_SPACING"
	    Value="4"
	    Comment="Space between image, text and buttons."/>
  <constant Type="int"
	    Name="ALERT_WIDTH"
	    Value="140"
	    Comment="Width of the alert dialog window."/>
  <constant Type="int"
	    Name="ALERT_HEIGHT"
	    Value="120"
	    Comment="Height of the alert dialog window."/>
  <constant Type="int"
        Name="PAD_CHOICE_POPUP_BUTTON"
        Value="16"
        NativeOnly="true"
        Comment="Subtract this constant from the button width() to get
                 space available for the button text."/>
    <constant Type="int"
          Name="PAD_CAPTION"
          Value="8"
          NativeOnly="true"
          Comment="Space between buttons and around the text, in pixels.
                   Qt's qwsDecoration does not take it into account."/>
 </constant_class>
</constants>
</configuration>
