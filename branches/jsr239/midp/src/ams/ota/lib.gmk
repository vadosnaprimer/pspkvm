############################################################
# Module's Component Configuration file
#
# Remember: It is up to the module itself to impose rules of
# how to compile the options. All the global Makefile needs
# is the final def. of Java and native file lists and some
# other def. (like VPATH)
############################################################

# Add to global SUBSYSTEMS list
#
#SUBSYSTEMS += ota

# Name of the library
OTA_NAME = ota

# Local module directory
OTA_DIR = $(SUBSYSTEM_AMS_DIR)/$(OTA_NAME)/reference

# Javadoc source path
MIDP_JAVADOC_SOURCEPATH += $(OTA_DIR)/classes

# Java files for the sub-system
#
SUBSYSTEM_AMS_JAVA_FILES += \
    $(OTA_DIR)/classes/com/sun/midp/installer/DiscoveryApp.java \
    $(OTA_DIR)/classes/com/sun/midp/installer/GraphicalInstaller.java

ifeq ($(TARGET_VM), cldc_vm)
SUBSYSTEM_AMS_JAVA_FILES += \
    $(OTA_DIR)/classes/com/sun/midp/installer/SuiteVerifier.java \
    $(OTA_DIR)/classes/com/sun/midp/installer/OtaNotifier.java
endif

ams_resources:: ota_resources

# Directory with image resources
INT_INPUT_OTA_IMAGES_DIR = \
    $(OTA_DIR)/classes/com/sun/midp/installer/resources

ifeq ($(USE_FILE_SYSTEM), true)

ifeq ($(USE_RAW_AMS_IMAGES), false)
ota_resources: $(STORAGEDIR)
	-@(cp -f $(INT_INPUT_OTA_IMAGES_DIR)/*.png \
	    $(STORAGEDIR)) $(LOG)
else
ota_resources: $(STORAGEDIR) $(IMAGE2RAW_JAR_FILE) \
	       $(SUBSYSTEM_CONFIGURATION_MERGED_FILE)
	@echo " ... converting OTA images to raw format" $(LOG)
	@$(call convert_images_to_raw,$(INT_INPUT_OTA_IMAGES_DIR))
endif

else

ota_resources: 

endif
