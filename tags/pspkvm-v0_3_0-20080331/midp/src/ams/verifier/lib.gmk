############################################################
# Module's Component Configuration file
#
# Remember: It is up to the module itself to impose rules of
# how to compile the options. All the global Makefile needs
# is the final def. of Java and native file lists and some
# other def. (like VPATH)
############################################################

# Library name
VERIFIER_NAME = verifier

# Add to global SUBSYSTEMS list
#
SUBSYSTEMS += $(VERIFIER_NAME)

# Local module directory
VERIFIER_DIR = $(SUBSYSTEM_AMS_DIR)/$(VERIFIER_NAME)

# Javadoc source path
MIDP_JAVADOC_SOURCEPATH += $(VERIFIER_DIR)/classes

SUBSYSTEM_AMS_JAVA_FILES += \
    $(VERIFIER_DIR)/classes/com/sun/midp/installer/Verifier.java

ifeq ($(USE_RESTRICTED_CRYPTO), true)
    VERIFIER_IMPL = with_crypto
else

ifeq ($(USE_BINARY_CRYPTO), true)
    VERIFIER_IMPL = with_crypto
else    
    VERIFIER_IMPL = without_crypto
endif

endif

# Java files for the sub-system
#
SUBSYSTEM_AMS_JAVA_FILES += \
    $(VERIFIER_DIR)/$(VERIFIER_IMPL)/classes/com/sun/midp/installer/VerifierImpl.java

MIDP_JAVADOC_SOURCEPATH += $(VERIFIER_DIR)/$(VERIFIER_IMPL)/classes
