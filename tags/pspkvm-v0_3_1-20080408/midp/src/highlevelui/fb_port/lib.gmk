# Name of the library
FBPORT_NAME = fb_port
FBPORT_DIR = $(SUBSYSTEM_HIGHUI_DIR)/$(FBPORT_NAME)

# Add to library set for this build
LIB_SET += $(FBPORT_NAME)

# Export include files
SUBSYSTEM_APP_EXTRA_INCLUDES += -I$(FBPORT_DIR)/include

# Native files for the library
# SUBSYSTEM_APP_NATIVE_FILES +=

# Source code path for the library
# vpath $(FBPORT_DIR)/native

# Java files for the library
#
SUBSYSTEM_APP_JAVA_FILES +=

# IMPL NOTE: Use library configuration file to select switch library
#
ifeq ($(USE_DIRECTFB), true)
    include $(FBPORT_DIR)/directfb/lib.gmk
else 
ifeq ($(TARGET_CPU), arm)
    include $(FBPORT_DIR)/fb/lib.gmk
else
    include $(FBPORT_DIR)/qvfb/lib.gmk
endif
endif
