SUBSYSTEM_SECURITY_MODULES += access_controller

ACCESS_CONTROLLER_DIR = $(SUBSYSTEM_DIR)/security/access_controller_cldc_port

# Javadoc source path
SUBSYSTEM_ACCESS_CONTROLLER_SOURCEPATH += $(ACCESS_CONTROLLER_DIR)/classes

MIDP_JAVADOC_SOURCEPATH += $(SUBSYSTEM_ACCESS_CONTROLLER_SOURCEPATH)

ifeq ($(TARGET_VM), cdc_vm)
    MIDP_BOOTCLASSPATH_PACKAGES_LIST += com.sun.j2me.security
endif

#
# Java files for the library
#
SUBSYSTEM_SECURITY_JAVA_FILES += \
  $(ACCESS_CONTROLLER_DIR)/classes/com/sun/j2me/security/AccessControlContext.java \
  $(ACCESS_CONTROLLER_DIR)/classes/com/sun/j2me/security/AccessControlContextAdapter.java \
  $(ACCESS_CONTROLLER_DIR)/classes/com/sun/j2me/security/AccessController.java \
  $(ACCESS_CONTROLLER_DIR)/classes/com/sun/j2me/security/InterruptedSecurityException.java
