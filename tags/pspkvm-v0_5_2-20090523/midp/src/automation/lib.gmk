	\
	$(SUBSYSTEM_DIR)/automation/reference/classes/com/sun/midp/automation/AutoEventDataFactory.java \
	$(SUBSYSTEM_DIR)/automation/reference/classes/com/sun/midp/automation/AutoSuiteStorage.java \
