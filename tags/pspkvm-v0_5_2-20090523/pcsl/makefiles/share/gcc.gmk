######################################################################
#
# Generic compiler specific defines
#
######################################################################
ifdef GNU_TOOLS_DIR
    GNU_TOOLS_BINDIR=$(GNU_TOOLS_DIR)/bin/
else
    ifeq ($(PCSL_CPU), arm)
	GNU_TOOLS_DIR=/opt/Embedix/tools/arm-linux
	GNU_TOOLS_BINDIR=$(GNU_TOOLS_DIR)/bin/
    else
	# Otherwise, use gcc command from path
	GNU_TOOLS_BINDIR=
    endif
endif

GCC_VERSION	=
#workaround: psptoolchain with gcc 4.3.2
CC		= $(GNU_TOOLS_BINDIR)../../bin/psp-gcc$(GCC_VERSION)
CPP		= $(GNU_TOOLS_BINDIR)../../bin/psp-g++$(GCC_VERSION)
LD		= $(GNU_TOOLS_BINDIR)../../bin/psp-g++$(GCC_VERSION)
AR		= $(GNU_TOOLS_BINDIR)../../bin/psp-ar -rc

CC_OUTPUT=-o 
AR_OUTPUT=
LD_OUTPUT=-o 

LIB_EXT=.a

CFLAGS=-c

ifeq ($(USE_GCOV), true)
CFLAGS   += -O0 -fprofile-arcs -ftest-coverage
endif

ifeq ($(USE_DEBUG), true)
CFLAGS+=-g
else
ifneq ($(USE_GCOV), true)
CFLAGS+=-O3 -fexpensive-optimizations
endif
endif

LD_FLAGS=
ifeq ($(USE_GCOV), true)
LD_FLAGS += -lgcov
endif

ifeq ($(PCSL_CPU), arm)
CFLAGS   += -DARM
LD_FLAGS += -Xlinker --no-warn-mismatch
endif

ifeq ($(PCSL_CPU), mips)
CFLAGS   += -G0 -fno-strict-aliasing
endif
