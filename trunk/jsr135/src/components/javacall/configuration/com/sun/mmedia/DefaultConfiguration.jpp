						MIME_AUDIO_SP_MIDI,
						MIME_AUDIO_WAV,
						MIME_AUDIO_WAV_2,
						MIME_IMAGE_GIF,
						MIME_AUDIO_MP3,
						MIME_AUDIO_MP3_2
					};
				}
				else
				{
					return new String[]{
						MIME_AUDIO_AMR,
						MIME_AUDIO_MIDI,
						MIME_AUDIO_MIDI_2,
						MIME_AUDIO_SP_MIDI,
						MIME_AUDIO_WAV,
						MIME_AUDIO_WAV_2,
						MIME_IMAGE_GIF,
						MIME_AUDIO_MP3,
						MIME_AUDIO_MP3_2
					};
				}
			}
			else
			{
				if( nIsJtsSupported() )
				{
					return new String[]{
