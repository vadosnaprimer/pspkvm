############################################################
# Module's Component Configuration file
#
# Remember: It is up to the module itself to impose rules of
# how to compile the options. All the global Makefile needs
# is the final def. of Java and native file lists and some
# other def. (like VPATH)
############################################################

# Add to global SUBSYSTEMS list
#
#SUBSYSTEMS += ams_jsr_interface

# Local module directory
AMS_JSR_INTERFACE_DIR = $(SUBSYSTEM_AMS_DIR)/ams_jsr_interface/reference

# Javadoc source path
#MIDP_JAVADOC_SOURCEPATH += $(AMS_JSR_INTERFACE_DIR)/classes

ifeq ($(TARGET_VM), cldc_vm)
$(GENERATED_DIR)/classes/com/sun/midp/jsr/JSRInitializer.java: \
    $(AMS_JSR_INTERFACE_DIR)/classes/com/sun/midp/jsr/JSRInitializer.jpp
	@$(call runjpp,$^,$@)

# Java files for the sub-system
#
SUBSYSTEM_AMS_JAVA_FILES += \
    $(GENERATED_DIR)/classes/com/sun/midp/jsr/JSRInitializer.java \
    $(AMS_JSR_INTERFACE_DIR)/classes/com/sun/midp/content/CHManager.java

ifneq ($(USE_JSR_205), true)
ifneq ($(USE_JSR_120), true)
    SUBSYSTEM_AMS_JAVA_FILES += \
        $(AMS_JSR_INTERFACE_DIR)/classes/com/sun/midp/wma/WMACleanupMonitor.java
endif
endif
ifneq ($(USE_JSR_229), true)
# Include stub implementation of JSR229 clean class
    SUBSYSTEM_AMS_JAVA_FILES += \
        $(AMS_JSR_INTERFACE_DIR)/classes/com/sun/midp/payment/PAPICleanUp.java
endif
endif

