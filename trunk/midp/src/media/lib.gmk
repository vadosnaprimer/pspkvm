# Adds to global SUBSYSTEMS list
#
SUBSYSTEM_MEDIA = media

SUBSYSTEMS += $(SUBSYSTEM_MEDIA)

# Javadoc source path
SUBSYSTEM_MEDIA_SOURCEPATH += $(SUBSYSTEM_DIR)/media/reference/classes

SUBSYSTEM_MEDIA_PACKAGES = \
    javax.microedition.media javax.microedition.media.control

MIDP_JAVADOC_SOURCEPATH += $(SUBSYSTEM_MEDIA_SOURCEPATH)
MIDP_JAVADOC_PACKAGES +=  $(SUBSYSTEM_MEDIA_PACKAGES)

MIDP_JAVADOC_ALL += \
        -group "Media stuff" \
	$(shell echo $(SUBSYSTEM_MEDIA_PACKAGES)|tr ' ' $(PATHSEP))

# There are no modules for subsystem ( media )
#

# vpath for ( media ) subsystem
#
# no native sources for media, therefore empty

# Java files for the ( media ) subsystem
#
SUBSYSTEM_MEDIA_JAVA_FILES += \
     $(SUBSYSTEM_DIR)/media/reference/classes/javax/microedition/media/Control.java \
     $(SUBSYSTEM_DIR)/media/reference/classes/javax/microedition/media/Controllable.java \
     $(SUBSYSTEM_DIR)/media/reference/classes/javax/microedition/media/Manager.java \
     $(SUBSYSTEM_DIR)/media/reference/classes/javax/microedition/media/MediaException.java \
     $(SUBSYSTEM_DIR)/media/reference/classes/javax/microedition/media/Player.java \
     $(SUBSYSTEM_DIR)/media/reference/classes/javax/microedition/media/PlayerListener.java \
     $(SUBSYSTEM_DIR)/media/reference/classes/javax/microedition/media/control/ToneControl.java \
     $(SUBSYSTEM_DIR)/media/reference/classes/javax/microedition/media/control/VolumeControl.java

