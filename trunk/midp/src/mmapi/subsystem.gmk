SUBSYSTEM_MMAPI_JAVA_FILES = \
    $(SUBSYSTEM_DIR)/mmapi/classes/javax/microedition/lcdui/MMHelperImpl.java \
    $(SUBSYSTEM_DIR)/mmapi/classes/com/sun/mmedia/MMHelper.java \
    $(SUBSYSTEM_DIR)/mmapi/classes/com/sun/mmedia/MMVideoItem.java \
    $(SUBSYSTEM_DIR)/mmapi/classes/com/sun/mmedia/MMVideoItemImpl.java \
    $(SUBSYSTEM_DIR)/mmapi/classes/com/sun/mmedia/DirectVideoItem.java \
    $(SUBSYSTEM_DIR)/mmapi/classes/com/sun/mmedia/DirectVideoItemImpl.java \
    $(SUBSYSTEM_DIR)/mmapi/classes/com/sun/mmedia/MIDPVideoPainter.java

ifeq ($(TARGET_VM),cldc_vm)
SUBSYSTEM_MMAPI_JAVA_FILES += \
    $(SUBSYSTEM_DIR)/mmapi/classes/com/sun/mmedia/MMEventHandler.java
endif

mmapi:


SUBSYSTEM_MMAPI_SOURCEPATH = $(SUBSYSTEM_DIR)/mmapi/classes

MIDP_JAVADOC_SOURCEPATH += $(SUBSYSTEM_MMAPI_SOURCEPATH)

ifneq ($(USE_JSR_234), true)
ifneq ($(USE_JSR_135), true)
ifneq ($(USE_MIDP_ABB), true)

# if one of USE_JSR_234, USE_JSR_135 or USE_MIDP_ABB is true then com.sun.mmedia
# is already in Javadoc package list. Otherwise it should be added to the list.
SUBSYSTEM_MMAPI_PACKAGES = \
    com.sun.mmedia
MIDP_JAVADOC_PACKAGES +=  $(SUBSYSTEM_MMAPI_PACKAGES)

MIDP_JAVADOC_ALL += \
        -group "Multimedia Package" \
	$(shell echo $(SUBSYSTEM_MMAPI_PACKAGES) | tr ' ' $(PATHSEP))

endif
endif
endif
    
