######################################################################
#
# Module's Component Configuration file
#
# Remember: It is up to the library itself to impose rules of
# how to compile the options. All the global Makefile needs
# is the final def. of Java and native file lists and some
# other def. (like VPATH)
#
######################################################################

# Adds to global SUBSYSTEMS list
#
SUBSYSTEMS += file

# Javadoc source path
SUBSYSTEM_FILE_SOURCEPATH += $(SUBSYSTEM_DIR)/protocol/file/classes$(PATHSEP)$(SUBSYSTEM_DIR)/protocol/file/reference/classes

SUBSYSTEM_FILE_PACKAGES = \
    com.sun.midp.io.j2me.storage

MIDP_JAVADOC_SOURCEPATH += $(SUBSYSTEM_FILE_SOURCEPATH)
MIDP_JAVADOC_PACKAGES +=  $(SUBSYSTEM_FILE_PACKAGES)

GROUP_PROTOCOL_JAVADOC_PACKAGES += \
	$(SUBSYSTEM_FILE_PACKAGES)

# vpath for ( file ) subsystem
#
vpath % $(SUBSYSTEM_DIR)/protocol/file/reference/native

# Jpp files that need pre-processing
#
$(GENERATED_DIR)/classes/com/sun/midp/io/j2me/storage/RandomAccessStream.java: $(SUBSYSTEM_DIR)/protocol/file/reference/classes/com/sun/midp/io/j2me/storage/RandomAccessStream.jpp
	@$(call runjpp,$^,$@)


# Java files for the ( file ) library
#
SUBSYSTEM_FILE_JAVA_FILES += \
    $(SUBSYSTEM_DIR)/protocol/file/reference/classes/com/sun/midp/io/j2me/storage/File.java \
    $(GENERATED_DIR)/classes/com/sun/midp/io/j2me/storage/RandomAccessStream.java

# Native files for the ( file ) library
#

SUBSYSTEM_FILE_NATIVE_FILES += \
    RandomAccessStream.c \
    storageFile.c

SUBSYSTEM_FILE_EXTRA_INCLUDES += \
    -I$(SUBSYSTEM_DIR)/protocol/file/include

ifeq ($(USE_I3_TEST), true)

SUBSYSTEM_SOCKET_I3TEST_JAVA_FILES += \
    $(SUBSYSTEM_DIR)/protocol/file/reference/i3test/com/sun/midp/io/j2me/storage/TestRandomAccessStream.java \
    $(SUBSYSTEM_DIR)/protocol/file/reference/i3test/com/sun/midp/io/j2me/storage/TestFileSystem.java

endif
